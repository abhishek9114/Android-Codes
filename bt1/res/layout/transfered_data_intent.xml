<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.listnew.StudDetail" >

    <TextView
        android:id="@+id/tvstudnamedata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvstudname"
        android:layout_below="@+id/tvstudname"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="32dp"
        android:text="" />

    <TextView
        android:id="@+id/tvstudemaildata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvstudemail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:text="" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tvstudnamedata"
        android:layout_below="@+id/tvstudemaildata"
        android:layout_marginTop="26dp"
        android:text="Invalid" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_marginLeft="34dp"
        android:layout_toRightOf="@+id/tvstudemaildata"
        android:text="Valid" />

    <TextView
        android:id="@+id/tvstudemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvstudnamedata"
        android:layout_centerHorizontal="true"
        android:text="Student&apos;s email Id"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tvstudname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvstudemail"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:text="Student&apos;s name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
